# Server Configuration
PORT=3000

# Security Secrets
JWT_SECRET=your_secret_key
SESSION_SECRET=your_session_secret

# CSRF Protection
CSRF_SECRET=your_csrf_secret

# Rate Limiting
RATE_LIMIT_WINDOW=15 # in minutes
RATE_LIMIT_MAX=100   # max requests per window per IP

# Session Configuration
SESSION_NAME=isrdo_session
SESSION_LIFETIME=86400000  # 24 hours in milliseconds
SESSION_SECURE=false       # Set to true in production

# Database Connection (If Required)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=your_database_password
DB_NAME=isrdo_security

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/error.log

# Environment Mode
NODE_ENV=development
